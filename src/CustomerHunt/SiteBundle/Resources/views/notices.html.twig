<div class="notices">
    {% for level in ['success', 'info', 'warning', 'danger'] %}
        {% if app.session.flashBag.has('notices.' ~ level) %}
            {% for notice in app.session.flashBag.get('notices.' ~ level) %}
                <div class="alert alert-{{ level }} alert-dismissable fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <span class="sr-only">Закрыть</span>
                    </button>
                    {{ notice|raw }}
                </div>
            {% endfor %}
        {% endif %}
    {% endfor %}
</div>