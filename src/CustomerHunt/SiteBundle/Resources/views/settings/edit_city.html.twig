{% extends 'CustomerHuntSiteBundle::layout.html.twig' %}

{% block title %}Новый город{% endblock %}

{% block navigation %}
    {% set project = view.project %}
    <li>
        <a href="{{ url('site_projects') }}">
            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>&nbsp; Проекты
        </a>
    </li>
    <li>
        <a href="{{ url('site_projects_project', {'project': project.id}) }}">
            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>&nbsp;
            {% if project.caption|length > 27 %}{{ project.caption|e[:27] }}...{% else %}{{ project.caption|e }}{% endif %}
        </a>
    </li>
    <li>
        <a href="{{ url('site_settings', {'project': project.id}) }}">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Настройки проекта
        </a>
    </li>
    <li class="active">
        <a><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> {{ view.city.caption|e }}</a>
    </li>
{% endblock %}

{% block content %}
    {% set project = view.project %}
    {% set city = view.city %}
    <div class="page">
        <div class="page-header">
            <h1>
                <span class="glyphicon glyphicon-globe" aria-hidden="true"></span> {{ city.caption|e }}
            </h1>
        </div>
        {% set form = forms.city %}
        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            {% set errors = form.caption.vars.errors %}
            {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
            <div class="{{ class }}">
                {{ form_label(form.caption, null, {'label_attr': {'class': 'control-label'}}) }}
                {% if form.caption.vars.required %}<span class="text-danger">*</span>{% endif %}
                {{ form_widget(form.caption, {'attr': {'class': 'form-control', 'autofocus': true}}) }}
                {% if errors|length > 0 %}
                    {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                {% endif %}
            </div>
            <div class="row">
                {% set errors = form.latitude.vars.errors %}
                {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
                <div class="col-xs-6 col-sm-6 col-md-6 {{ class }}">
                    {{ form_label(form.latitude, null, {'label_attr': {'class': 'control-label'}}) }}
                    {% if form.latitude.vars.required %}<span class="text-danger">*</span>{% endif %}
                    {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
                    {% if errors|length > 0 %}
                        {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                    {% endif %}
                </div>
                {% set errors = form.longitude.vars.errors %}
                {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
                <div class="col-xs-6 col-sm-6 col-md-6 {{ class }}">
                    {{ form_label(form.longitude, null, {'label_attr': {'class': 'control-label'}}) }}
                    {% if form.longitude.vars.required %}<span class="text-danger">*</span>{% endif %}
                    {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
                    {% if errors|length > 0 %}
                        {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                    {% endif %}
                </div>
            </div>
            {% set errors = form.genitive.vars.errors %}
            {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
            <div class="{{ class }}">
                {{ form_label(form.genitive, null, {'label_attr': {'class': 'control-label'}}) }}
                {% if form.genitive.vars.required %}<span class="text-danger">*</span>{% endif %}
                {{ form_widget(form.genitive, {'attr': {'class': 'form-control'}}) }}
                {% if errors|length > 0 %}
                    {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                {% endif %}
            </div>
            {% set errors = form.dative.vars.errors %}
            {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
            <div class="{{ class }}">
                {{ form_label(form.dative, null, {'label_attr': {'class': 'control-label'}}) }}
                {% if form.dative.vars.required %}<span class="text-danger">*</span>{% endif %}
                {{ form_widget(form.dative, {'attr': {'class': 'form-control'}}) }}
                {% if errors|length > 0 %}
                    {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                {% endif %}
            </div>
            {% set errors = form.accusative.vars.errors %}
            {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
            <div class="{{ class }}">
                {{ form_label(form.accusative, null, {'label_attr': {'class': 'control-label'}}) }}
                {% if form.accusative.vars.required %}<span class="text-danger">*</span>{% endif %}
                {{ form_widget(form.accusative, {'attr': {'class': 'form-control'}}) }}
                {% if errors|length > 0 %}
                    {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                {% endif %}
            </div>
            {% set errors = form.ablative.vars.errors %}
            {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
            <div class="{{ class }}">
                {{ form_label(form.ablative, null, {'label_attr': {'class': 'control-label'}}) }}
                {% if form.ablative.vars.required %}<span class="text-danger">*</span>{% endif %}
                {{ form_widget(form.ablative, {'attr': {'class': 'form-control'}}) }}
                {% if errors|length > 0 %}
                    {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                {% endif %}
            </div>
            {% set errors = form.prepositional.vars.errors %}
            {% set class = 'form-group' ~ (errors|length > 0 ? ' has-error' : '') %}
            <div class="{{ class }}">
                {{ form_label(form.prepositional, null, {'label_attr': {'class': 'control-label'}}) }}
                {% if form.prepositional.vars.required %}<span class="text-danger">*</span>{% endif %}
                {{ form_widget(form.prepositional, {'attr': {'class': 'form-control'}}) }}
                {% if errors|length > 0 %}
                    {% for error in errors %}<span class="help-block text-danger">{{ error.message }}</span>{% endfor %}
                {% endif %}
            </div>
            <hr>
            <em>Знаком <span class="text-danger">*</span> отмечены поля, обязательные для заполнения</em>
            <hr>
            <a href="{{ url('site_projects_project', {'project': project.id}) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Назад
            </a>
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-globe" aria-hidden="true"></span> Сохранить изменения
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}